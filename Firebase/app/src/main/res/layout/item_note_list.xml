<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small_2"
        android:layout_marginTop="@dimen/margin_small_2"
        android:layout_marginRight="@dimen/margin_small_2"
        android:layout_marginBottom="@dimen/margin_small_2"
        android:elevation="@dimen/margin_small_2"
        android:foreground="@drawable/bg_ripple_btn"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/margin_small_1">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium_1">

        <TextView
                android:id="@+id/tvNoteTitle"
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small_1"
                android:text="@string/note_title" />

        <ImageView
                android:id="@+id/ivDeleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:foreground="@drawable/bg_ripple_btn"
                android:src="@drawable/ic_item_delete_18dp" />

        <TextView
                android:id="@+id/tvBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNoteTitle"
                android:layout_marginTop="@dimen/margin_small_1"
                android:background="@drawable/text_note_background_color"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="1"
                android:padding="@dimen/margin_small_2"
                android:text="@string/note_brief"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/text_medium_2" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
